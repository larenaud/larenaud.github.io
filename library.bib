doi = {10.1098/rsbl.2014.0043},
issn = {1744-9561},
journal = {Biology Letters},
keywords = {Sexual antagonism,Sexual selection,Total selection,Viability selection},
month = {feb},
number = {2},
pages = {20140043},
title = {{Sexually antagonistic association between paternal phenotype and offspring viability reinforces total selection on a sexually selected trait}},
