journal = {Oecologia},
keywords = {Density dependence,Environmental variation,Population dynamics,Sexual selection,Ungulates},
number = {4},
pages = {502--513},
title = {{Early survival in roe deer: Causes and consequences of cohort variation in two contrasted populations}},
