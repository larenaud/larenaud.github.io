journal = {Journal of Wildlife Management},
keywords = {Procyon lotor,contact rate,home-range overlap,kernel,proximity loggers,raccoons},
month = {nov},
number = {8},
pages = {1670--1675},
title = {{Keep in touch: Does spatial overlap correlate with contact rate frequency?}},
