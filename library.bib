editor = {Dingemanse, Niels},
issn = {0021-8790},
journal = {Journal of Animal Ecology},
keywords = {Bayesian modelling,ecophysiology,hierarchical levels,hmsc,individual differences,lactation,maternal strategy,milk,multivariate,multivariate analyses},
mendeley-tags = {hmsc,milk,multivariate},
month = {apr},
