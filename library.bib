journal = {Philosophical Transactions of the Royal Society B: Biological Sciences},
keywords = {Attribution,Biological response function,Climate variability,Definition,Idiosyncratic responses,Mechanism},
month = {jun},
number = {1723},
pages = {20160134},
title = {{Behavioural, ecological and evolutionary responses to extreme climatic events: challenges and directions}},
